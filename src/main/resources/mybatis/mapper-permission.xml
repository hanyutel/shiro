<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.spring.shiro.dao.PermissionDao">
    
    <select id="queryPermissionsByRoles" resultType="com.atguigu.spring.shiro.bean.Permission">
        select
            *
        from t_permission
        where id in (
            select
                permissionid
            from t_role_permission
            where roleid in
            <foreach collection="roles" item="role" open="(" close=")" separator=",">
            #{role.id}
            </foreach>
        )
    </select>
</mapper>